{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
    <header>
    <div class="parallax-container">
        {% include '_scroll_navigation.html.twig' with {'links':'direct'} %}
        <div class="background-container">
            {% include '_header_navigation.html.twig' with {'links':'direct'} %}
            <div class="header-slogan">
                <h1 class="slide-in-text">{{ 'app.header.slogan'|trans|raw|nl2br }}</h1>
            </div>
        </div>
    </div>
    </header>
    <div id="services">
        <div class="services-container">
            <h2>{{ 'app.navigation.services'|trans }}</h2>
            <div id="services-text">
                {{ 'app.services.text'|trans|raw|nl2br }}
            </div>
        </div>
    </div>
    <div class="background-container2"></div>
    <div id="about">
        <div class="about-container">
            <h2>{{ 'app.navigation.about'|trans }}</h2>
            <div id="about-text">
                {{ 'app.about.text'|trans|raw|nl2br }}
            </div>
        </div>
    </div>
    <div class="background-container2"></div>
    <div id="portfolio">
        <div class="portfolio-container">
            <h2>{{ 'app.navigation.portfolio'|trans }}</h2>
            <div class="project">
    {#            <img src="{{ asset('images/project1.jpg') }}" alt="Projekt 1">#}
                <h3>Projekt 1</h3>
                <p>Beschreibung des Projekts.</p>
            </div>
            <div class="project">
    {#            <img src="{{ asset('images/project2.jpg') }}" alt="Projekt 2">#}
                <h3>Projekt 2</h3>
                <p>Beschreibung des Projekts.</p>
            </div>
        </div>
    </div>
    <div class="background-container2"></div>
    <div id="contact">
        <div class="contact-container">
            <h2>{{ 'app.navigation.contact'|trans }}</h2>
            <div id="contact-text">
                {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.message) }}
                    {{ form_row(form.captcha) }}
                    <input type="hidden" name="token" id="token">
                    <div class="contact-input">
                        <button type="submit" class="contact-input-button">Senden</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; 2024 Achim Kr√§mer</p>
        <a target="_blank" href="{{ path('app_data-protection_index') }}">{{ 'app.data_protection.title'|trans }}</a>
        <a target="_blank" href="{{ path('app_impress_index') }}">{{ 'app.impress.title'|trans }}</a>
{#        <div>#}
{#            <a href="https://linkedin.com"><img src="{{ asset('images/linkedin.png') }}" alt="LinkedIn"></a>#}
{#            <a href="https://github.com"><img src="{{ asset('images/github.png') }}" alt="GitHub"></a>#}
{#        </div>#}
    </footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}
