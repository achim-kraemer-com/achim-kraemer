<div style="max-width:600px; font-family: Arial, Helvetica, sans-serif; font-size:12px; line-height:18px; color:#000000;">
    <div style="margin-bottom:10px;">Liebe Grüße,</div>

    <table cellpadding="0" cellspacing="0" border="0" width="570" style="width:570px; border-collapse:collapse; margin-left:15px; background-color:#ffffff;">
        <tr>
            {% if email_signature.customer.logo is not null %}
                <td valign="top" width="112" style="width:112px; padding-right:10px;">
                    {% set imagePath = email_signature.customer.logo %}
                    <img src="{{ absolute_url(asset(imagePath)) }}" alt="logo" width="100" height="100" style="display:block; border-radius:50%; max-width:100px; max-height:100px;">
                </td>
            {% endif %}

            <td style="vertical-align: middle;max-width: 166px;min-width: 160px;">
                <div>
                    <div style="padding-bottom: 3px;text-align: left;font: normal normal bold 12px/15px Arial;letter-spacing: 0;color: #000000;opacity: 1;">
                        {{ email_signature.customer.firstname }} {{ email_signature.customer.lastname }}
                    </div>

                    {% if email_signature.customer.title is not null %}
                        <div style="font-family: Arial, Helvetica, sans-serif; font-size:10px; line-height:15px; font-weight:normal; color:#928A8A; margin-bottom:3px;">
                            <span style="font-weight:bold;">{{ email_signature.customer.title }}</span>
                        </div>
                    {% endif %}
                </div>
            </td>

            <td style="vertical-align: middle;min-width: 270px;max-width: 285px;min-height: 120px;padding-left: 14px; background: #F6F5F5 0 0 no-repeat padding-box;opacity: 1;" bgcolor="#F6F5F5"; >
                <table cellpadding="0" cellspacing="0" border="0" width="100%" style="padding-left: 14px; border-collapse:collapse";>
                    {% if email_signature.customer.phone is not null %}
                        <tr>
                            <td width="20" valign="middle">
                                <img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/phone.png" alt="phone" width="14" height="14" style="display:block;">
                            </td>
                            <td valign="middle" style="font-family: Arial, Helvetica, sans-serif; font-size:12px; line-height:18px; color:#000000; padding-bottom:5px;">
                                <a href="tel:{{ email_signature.customer.phone }}" style="color:#000000; text-decoration:none !important; -webkit-text-decoration:none; -ms-text-decoration:none;">{{ email_signature.customer.phone }}</a>
                            </td>
                        </tr>
                    {% endif %}

                    {% if email_signature.customer.mobile is not null %}
                        <tr>
                            <td width="20" valign="middle">
                                <img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/card-sim.png" alt="mobile" width="14" height="14" style="display:block;">
                            </td>
                            <td valign="middle" style="font-family: Arial, Helvetica, sans-serif; font-size:12px; line-height:18px; color:#000000; padding-bottom:5px;">
                                <a href="tel:{{ email_signature.customer.mobile }}" style="color:#000000; text-decoration:none !important; -webkit-text-decoration:none; -ms-text-decoration:none;">{{ email_signature.customer.mobile }}</a>
                            </td>
                        </tr>
                    {% endif %}

                    {% if email_signature.customer.fax is not null %}
                        <tr>
                            <td width="20" valign="middle">
                                <img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/printer.png" alt="fax" width="14" height="14" style="display:block;">
                            </td>
                            <td valign="middle" style="font-family: Arial, Helvetica, sans-serif; font-size:12px; line-height:18px; color:#000000; padding-bottom:5px;">
                                <a href="tel:{{ email_signature.customer.fax }}" style="color:#000000; text-decoration:none !important; -webkit-text-decoration:none; -ms-text-decoration:none;">{{ email_signature.customer.fax }}</a>
                            </td>
                        </tr>
                    {% endif %}

                    <tr>
                        <td width="20" valign="middle">
                            <img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/mail.png" alt="email" width="14" height="14" style="display:block;">
                        </td>
                        <td valign="middle" style="font-family: Arial, Helvetica, sans-serif; font-size:12px; line-height:18px; color:#000000; padding-bottom:5px;">
                            <a href="mailto:{{ email_signature.customer.email }}" style="color:#000000; text-decoration:none !important; -webkit-text-decoration:none; -ms-text-decoration:none;">{{ email_signature.customer.email }}</a>
                        </td>
                    </tr>

                    <tr>
                        <td width="20" valign="middle">
                            <img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/globe.png" alt="website" width="14" height="14" style="display:block;">
                        </td>
                        <td valign="middle" style="font-family: Arial, Helvetica, sans-serif; font-size:12px; line-height:18px; color:#000000; padding-bottom:5px;">
                            <a href="https://{{ email_signature.customer.website }}" target="_blank" style="color:#000000; text-decoration:none !important; -webkit-text-decoration:none; -ms-text-decoration:none;">{{ email_signature.customer.website }}</a>
                        </td>
                    </tr>

                    {% if email_signature.customer.facebook is not null or email_signature.customer.instagram is not null or email_signature.customer.linkedin is not null or email_signature.customer.github is not null %}
                        <tr>
                            <td valign="top" colspan="2" style="font-family: Arial, Helvetica, sans-serif; font-size:12px; line-height:18px; color:#928A8A; padding-top:5px;">
                                Besuche mich auf:
                                {% if email_signature.customer.facebook is not null %}
                                    <a href="{{ email_signature.customer.facebook }}" target="_blank"><img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/facebook.png" alt="facebook" width="14" height="14" style="display:inline-block; margin-left:5px;"></a>
                                {% endif %}
                                {% if email_signature.customer.instagram is not null %}
                                    <a href="{{ email_signature.customer.instagram }}" target="_blank"><img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/instagram.png" alt="instagram" width="14" height="14" style="display:inline-block; margin-left:5px;"></a>
                                {% endif %}
                                {% if email_signature.customer.linkedin is not null %}
                                    <a href="{{ email_signature.customer.linkedin }}" target="_blank"><img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/linkedin.png" alt="linkedin" width="14" height="14" style="display:inline-block; margin-left:5px;"></a>
                                {% endif %}
                                {% if email_signature.customer.github is not null %}
                                    <a href="{{ email_signature.customer.github }}" target="_blank"><img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/github.png" alt="github" width="14" height="14" style="display:inline-block; margin-left:5px;"></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                </table>
            </td>
        </tr>
    </table>

    {% if email_signature.image is not null %}
        <div style="margin-top:14px; margin-left:15px; max-width:570px;">
            <a href="{{ email_signature.link }}" target="_blank">
                <img src="{{ app.request.getSchemeAndHttpHost() }}/uploads/images/email_signature/{{ email_signature.image }}" alt="banner" style="display:block; max-width:570px; height:auto;">
            </a>
        </div>
    {% endif %}
</div>

