<div style="position: relative;max-width: 600px;margin-left: 0;left: 0">
    <div style="font: small/1.5 Arial,Helvetica,sans-serif;letter-spacing: normal;color: #000000;">
        Liebe Grüße,
    </div>
    <table style="position: relative;margin-left: 15px;margin-right: auto;min-width: 570px;max-width: 570px;min-height: 120px;">
        <tbody>
            <tr>
                {% if email_signature.customer.logo is not null %}
                    <td style="max-width: 112px;min-width: 112px;">
                        {% set imagePath = email_signature.customer.logo %}
                        <img style="max-width: 100px;max-height: 100px;border-radius: 50%;" src="{{ asset(imagePath) }}">
                    </td>
                {% endif %}
                <td style="vertical-align: middle;max-width: 166px;min-width: 160px;">
                    <div>
                        <div style="padding-bottom: 3px;text-align: left;font: normal normal bold 12px/18px Arial;letter-spacing: 0;color: #000000;opacity: 1;">
                            {{ email_signature.customer.firstname }} {{ email_signature.customer.lastname }}
                        </div>
                        <div style="padding-bottom: 3px;text-align: left;font: normal normal normal 12px/18px Arial;letter-spacing: 0;color: #000000;">

                        </div>
                        {% if email_signature.customer.title is not null %}
                            <div style="padding-bottom: 3px;text-align: left;font: normal normal normal 10px/15px Arial;letter-spacing: 0;color: #928A8A;">
                                <span style="font-weight: bold;">{{ email_signature.customer.title }}</span>
                            </div>
                        {% endif %}
                    </div>
                </td>
                <td style="vertical-align: middle;min-width: 270px;max-width: 285px;min-height: 120px;padding-left: 14px;background: #F6F5F5 0 0 no-repeat padding-box;opacity: 1;">
                    <div>
                        {% if email_signature.customer.phone is not null %}
                            <div style="padding-bottom: 5px;text-align: left;font: normal normal normal 12px/18px Arial;letter-spacing: 0;color: #000000;opacity: 1;">
                                <a target="_blank" href="tel:{{ email_signature.customer.phone }}">
                                    <svg style="padding-left: 5px; display: inline-block; color: {{ email_signature.customer.primaryColor }};" width="16" height="16" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                                    </svg>
                                    <span style="display: inline-block"> {{ email_signature.customer.phone }}</span></a>
                            </div>
                        {% endif %}
                        {% if email_signature.customer.mobile is not null %}
                            <div style="padding-bottom: 5px;text-align: left;font: normal normal normal 12px/18px Arial;letter-spacing: 0;color: #000000;opacity: 1;">
                                <a target="_blank" href="tel:{{ email_signature.customer.mobile }}">
                                    <svg style="padding-left: 5px; display: inline-block; color: {{ email_signature.customer.primaryColor }};" width="16" height="16" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0 0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
                                    </svg>
                                    <span style="display: inline-block"> {{ email_signature.customer.mobile }}</span></a>
                            </div>
                        {% endif %}
                        {% if email_signature.customer.fax is not null %}
                            <div style="padding-bottom: 5px;text-align: left;font: normal normal normal 12px/18px Arial;letter-spacing: 0;color: #000000;opacity: 1;">
                                <a target="_blank" href="tel:{{ email_signature.customer.fax }}">
                                    <svg style="padding-left: 5px; display: inline-block; color: {{ email_signature.customer.primaryColor }};" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-printer-icon lucide-printer">
